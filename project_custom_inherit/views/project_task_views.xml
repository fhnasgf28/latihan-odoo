        <record id="project_task_search_view_inherited" model="ir.ui.view">
            <field name="name">project.task.search.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="inside">
                    <filter string="Prioritas" name="group_by_task_priority" context="{'group_by':'task_priority'}"/>
                    <filter string="Tipe Tugas" name="group_by_task_type" context="{'group_by':'task_type'}"/>
                </xpath>
