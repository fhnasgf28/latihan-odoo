<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_gemini_reminder" model="mail.template">
            <field name="name">Email: Pesan Motivasi Harian (Gemini)</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="subject">âœ¨ Pesan Semangat untuk Anda Hari Ini!</field>
            <field name="email_from">${(object.company_id.name)} &lt;${(object.company_id.email or 'noreply@yourcompany.com')}&gt;</field>
            <field name="email_to">${object.email_formatted}</field>
            <field name="body_html" type="html">
                <div style="font-family: Arial, sans-serif; font-size: 14px; color: #333;">
                    <p>Halo ${ctx.get('user_name')},</p>
                    <p>Semoga harimu menyenangkan! Berikut adalah sedikit pesan penyemangat untuk menemani aktivitasmu hari ini:</p>
                    <div style="border-left: 4px solid #875A7B; padding-left: 15px; margin: 20px 0; font-style: italic; font-size: 16px;">
                        ${ctx.get('motivation_text') | safe}
                    </div>
                    <p>Tetap semangat dan terus berkarya!</p>
                    <br/>
                    <p>Hormat kami,</p>
                    <p><strong>${object.company_id.name}</strong></p>
                </div>
            </field>
        </record>

    </data>
</odoo>