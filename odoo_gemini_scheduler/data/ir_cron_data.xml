<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_gemini_reminder" model="ir.cron">
            <field name="name">Gemini: Kirim Email Motivasi Harian</field>
            <field name="model_id" ref="model_gemini_motivator"/>
            <field name="state">code</field>
            <field name="code">model._run_gemini_reminder_cron()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_daily_reflection" model="ir.cron">
          <field name="name">Daily Self Reflection Scheduler</field>
          <field name="model_id" ref="model_daily_journal"/>
          <field name="state">code</field>
          <field name="code">model.send_daily_reflection()</field>
          <field name="active">True</field>
          <field name="interval_type">days</field>
          <field name="interval_number">1</field>
          <field name="numbercall">-1</field>
          <!-- set nextcall to desired time in UTC (adjust) -->
          <field name="nextcall">2025-10-20 14:00:00</field>
        </record>
    </data>
</odoo>