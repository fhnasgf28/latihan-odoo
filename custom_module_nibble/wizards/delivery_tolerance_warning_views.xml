<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_tolerance_warning_form" model="ir.ui.view">
        <field name="name">delivery.tolerance.warning.form</field>
        <field name="model">delivery.tolerance.warning</field>
        <field name="arch" type="xml">
            <form string="Delivery Tolerance Warning">
                <field name="warning_message" readonly="1" nolabel="1" widget="html"/>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
