<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_midtrans_payment" model="ir.actions.report">
            <field name="name">Midtrans Payment Receipt</field>
            <field name="model">crm.midtrans.transaction</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">crm_midtrans_payment.report_midtrans_payment_document</field>
            <field name="report_file">crm_midtrans_payment.report_midtrans_payment_document</field>
            <field name="print_report_name">'Midtrans Payment - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_crm_midtrans_transaction"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_midtrans_payment_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>

                            <h2 class="mt-4">Midtrans Payment Receipt</h2>

                            <div class="row mt-4 mb-4" id="informations">
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>Order ID:</strong>
                                    <p class="m-0" t-field="o.name"/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>Date:</strong>
                                    <p class="m-0" t-field="o.create_date" t-options='{"widget": "date"}'/>
                                </div>
                                <div class="col-auto col-3 mw-100 mb-2">
                                    <strong>Status:</strong>
                                    <p class="m-0" t-field="o.state"/>
                                </div>
                            </div>

                            <div class="row mt-4 mb-4">
                                <div class="col-6">
                                    <strong>Customer / Lead:</strong>
                                    <div t-field="o.lead_id"/>
                                </div>
                            </div>

                            <table class="table table-sm o_main_table mt-4">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th class="text-right">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Midtrans Transaction</td>
                                        <td class="text-right">
                                            <span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="clearfix">
                                <div id="total" class="row">
                                    <div class="col-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td><strong>Payment Type:</strong></td>
                                                <td><span t-field="o.payment_type"/></td>
                                            </tr>
                                            <tr>
                                                <td><strong>Transaction Status:</strong></td>
                                                <td><span t-field="o.transaction_status"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <table class="table table-sm">
                                            <tr class="border-black o_total">
                                                <td><strong>Total</strong></td>
                                                <td class="text-right">
                                                    <span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="oe_structure"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
