<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="crm_lead_view_form_inherit_midtrans" model="ir.ui.view">
      <field name="name">crm.lead.form.inherit.midtrans</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="crm.crm_lead_view_form"/>
      <field name="arch" type="xml">

        <xpath expr="//header" position="inside">
          <button name="action_generate_midtrans_payment_link" type="object"
                  string="Generate Payment Link" class="btn-primary"
                  invisible="type != 'opportunity'"/>
        </xpath>

        <xpath expr="//sheet" position="inside">
          <div class="oe_button_box" name="button_box">
            <button type="object" class="oe_stat_button" name="action_view_midtrans_transactions"
                    icon="fa-credit-card">
              <field name="midtrans_tx_count" widget="statinfo" string="Payments"/>
            </button>
          </div>
        </xpath>

        <xpath expr="//notebook" position="inside">
          <page string="Payments">
            <field name="midtrans_tx_ids" readonly="1">
              <tree>
                <field name="name"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="transaction_status"/>
                <field name="last_notification_at"/>
              </tree>
            </field>
          </page>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
