<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="action_midtrans_transactions" model="ir.actions.act_window">
      <field name="name">Midtrans Transactions</field>
      <field name="res_model">crm.midtrans.transaction</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_midtrans_transaction_tree" model="ir.ui.view">
      <field name="name">crm.midtrans.transaction.tree</field>
      <field name="model">crm.midtrans.transaction</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="lead_id"/>
          <field name="amount"/>
          <field name="state"/>
          <field name="transaction_status"/>
          <field name="last_notification_at"/>
        </tree>
      </field>
    </record>

    <record id="view_midtrans_transaction_form" model="ir.ui.view">
      <field name="name">crm.midtrans.transaction.form</field>
      <field name="model">crm.midtrans.transaction</field>
      <field name="arch" type="xml">
        <form string="Midtrans Transaction">
          <header>
            <button name="action_open_snap" type="object" string="Open Payment Page"
                    class="btn-primary" invisible="not snap_redirect_url"/>
            <button name="action_refresh_status" type="object" string="Refresh Status" class="btn-secondary"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,pending,paid,failed,expired,cancelled"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="lead_id"/>
              <field name="amount"/>
            </group>
            <group>
              <field name="snap_token" readonly="1"/>
              <field name="snap_redirect_url" readonly="1"/>
            </group>
            <group>
              <field name="transaction_status" readonly="1"/>
              <field name="fraud_status" readonly="1"/>
              <field name="payment_type" readonly="1"/>
              <field name="status_code" readonly="1"/>
            </group>
            <group>
              <field name="raw_notification" readonly="1" widget="text"/>
            </group>
          </sheet>
          <chatter/>
        </form>
      </field>
    </record>

  </data>
</odoo>
