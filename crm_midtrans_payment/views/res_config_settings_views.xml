<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_midtrans" model="ir.ui.view">
      <field name="name">res.config.settings.form.inherit.midtrans</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
          <div class="app_settings_block" data-string="CRM Midtrans" string="CRM Midtrans">
            <h2>CRM Midtrans</h2>
            <div class="row mt16 o_settings_container">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                  <field name="midtrans_environment"/>
                  <field name="midtrans_server_key" password="True"/>
                  <div class="text-muted">
                    Webhook URL: <code>/midtrans/webhook</code>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
